<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Marketzet</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/styles/index.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!--<link rel="stylesheet" href="/public/assets/styles/index.css">-->
</head>
<body>

<header>
    <div class="navbar">
        <div class="logo">
            <% if (typeof user === 'undefined' || user.length === 0) { %>
                <h1></h1>
            <% } else { %>
                <h1>Bienvenido <%= user.username %></h1>
            <% } %>
            <img src="assets/images/blank_avatar.png" alt="Avatar" class="avatar">
            <h1>Marketzet</h1>
        </div>
        <div class="search-bar">
        <form action="/busqueda" method="get">
            <input type="text" placeholder="Buscar..." name="searchInput" id="searchInput">
            <button type="submit">Buscar</button>
        </form>
        </div>
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Categorías
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Categoría 1</a>
                <a class="dropdown-item" href="#">Categoría 2</a>
                <a class="dropdown-item" href="#">Categoría 3</a>
                <!-- Agrega más categorías según sea necesario -->
            </div>
        </div>
    </div>
</header>

<main id="mainContent">
    <% if (typeof productos === 'undefined' || productos.length === 0) { %>
        <div class="alert-danger">No se encontraron productos.</div>
    <% } else { %>
        <% productos.forEach(producto => { %>
            <div class="product">
                <% if (producto.imagen !== null) { %>
                    <img class="img_pro" src="<%= 'data:image/png;base64,' + Buffer.from(producto.imagen, 'binary').toString('base64') %>" alt="<%= producto.nombre_producto %>">
                <% } else { %>
                    <img src="">
                <% } %>
                <h3><%= producto.nombre_producto %></h3>
                <p><%= producto.descripcion %></p>
                <p>Precio: $<%= producto.precio_unidad %></p>
            </div>
        <% }); %>
    <% } %>
</main>
<footer>
    <!-- Aquí podrías incluir información adicional, enlaces, etc. -->
    <p>Derechos de autor &copy; 2024 Tienda Online. Todos los derechos reservados.</p>
</footer>

</body>
</html>